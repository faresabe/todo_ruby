<p style="color: green"><%= notice %></p>

<% content_for :title, "Tasks" %>

<h1>Tasks</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Todos</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.completed %></td>
        <td>
          <%= link_to "Show", task, class: "btn btn-sm btn-primary" %>
          <%= link_to "Edit", edit_task_path(task), class: "btn btn-sm btn-warning" %>
          <%= link_to "Delete", task, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New task", new_task_path, class: "btn btn-success" %>
